<%= render 'shared/header', title: "User Profile Page for nice_name(@user)" %>

<div class='container'>
  <div class='col-sm-4'>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><%= link_to "@#{@user.username}", user_path(@user.username) %></h3>
      </div>
      <div class="panel-body">
        <%= @user.first_name %> <%= @user.last_name.chars.first %>
          <br/>
        <%= @user.location %>
      </div>
    </div>
  </div>
  <div class='col-sm-8'>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">News Feed</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @statuses.first(5).each do |status| %>
            <div class='well'>
              <%= status.body %>
              <br/>
              <%= link_to "@"+ status.creator.username, user_path(status.creator.username) %>
            </div>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>